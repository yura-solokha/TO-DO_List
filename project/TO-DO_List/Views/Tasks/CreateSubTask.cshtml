@model TO_DO_List.Models.Tasks.SubTaskViewModel

<body class="task-body">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Tasks" asp-action="CreateSubTask" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Назва</label>
                        <input asp-for="Name" class="form-control" required/>
                        <input type="hidden" asp-for="ParentId" value="@Model.ParentId"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Priority" class="form-label">Пріоритетність</label>
                        <select asp-for="Priority" class="form-control" required>
                            <option value="0">Пріоритетне</option>
                            <option value="1">Непріоритетне</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Опис</label>
                        <input asp-for="Description" class="form-control" required/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Deadline" class="form-label">Термін</label>
                        <input asp-for="Deadline" class="form-control" type="date" required/>
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-dark">Створити</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>